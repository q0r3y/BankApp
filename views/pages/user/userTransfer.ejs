<!doctype html>
<html lang="en">
<head>
    <%- include('../../partials/header'); %>
    <link rel="stylesheet" href="../styles/user/userHomeStyles.css">
    <link rel="stylesheet" href="../styles/user/userTransferStyles.css">
</head>
</head>
<body>

<%- include ('../../partials/user/userTopWelcomBar.ejs'); -%>

<section id="main-display-bar">
    <h1>Transfer</h1>

    <form id="transfer-form">
        <label for="from-account" class="account-name">From Account:</label>
        <select name="transfer-from-account" id="from-account">
            <option id="savings-drop-down">Savings 1001 - 100.00</option>
            <option id="checking-drop-down">Checking 1002 - 0.00</option>
            <option id="credit-drop-down">Credit 1003 - 0.00</option>
        </select>
        <label for="transfer-to" class="account-name">To Account:</label>
        <input type="number" name="transfer-to-account" id="transfer-to" placeholder="Ex: 1001">
        <label for="transfer-amount" class="amount-text">Transfer Amount:</label>
        <input type="number" min="0.01" placeholder="1.00" name="transfer-amount" id="transfer-amount">
        <input class="button-primary" type="button" value="Transfer" name="button" id="transfer-submit">
        <p id="message-text"></p>
    </form>

</section>

<%- include ('../../partials/user/userBottomMenuBar.ejs'); -%>

<script src="../js/components/user/AppScripts.js" type="module"></script>
<script src="../js/pages/user/userTransfer.js" type="module"></script>

</body>
<%- include('../../partials/footer'); %>
</html>